@page
@model MyScriptureJournal.Pages.ScriptureJournalMenu.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Scripture Notes</h1>

<p>
    <a asp-page="Create">Add New Note</a>
</p>
<form>
    <p>
        Book:
        <select asp-for="ScriptureBook" asp-items="Model.Book">
            <option value="">All</option>
        </select>
        Created Date:
        <select asp-for="ScriptureCreatedDate" asp-items="Model.CreatedDate">
            <option value="">All</option>
        </select>
        Notes: <input type="text" asp-for="SearchNotes" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].ChapterVerse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScriptureJournal[0].CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ScriptureJournal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChapterVerse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
